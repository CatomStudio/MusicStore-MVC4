@model MusicStore.WebUI.Models.LoginViewModel
@{
    ViewBag.Title = "Admin: Log In";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Log In</h1>
<p>Please log in to access the MusicStore:</p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.EditorForModel()
    <p><input type="submit" value="Log in" /></p>
    <p>@Html.ActionLink("Don't you have an account? Register Now!","Register")</p>
}